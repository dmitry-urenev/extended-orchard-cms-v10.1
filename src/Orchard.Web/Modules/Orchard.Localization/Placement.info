<Placement>
    <!-- available display shapes -->
    <!--
        Parts_Localization_ContentTranslations
        Parts_Localization_ContentTranslations_Summary
        Parts_Localization_ContentTranslations_SummaryAdmin
    -->
    <!-- edit shape just gets default placement -->
    <Place Parts_Localization_ContentTranslations_Edit="Content:0"/>
  
    <Match DisplayType="Detail">
        <Place Parts_Localization_ContentTranslations="-"/>
    </Match>
  
    <Match DisplayType="Summary">
        <Place Parts_Localization_ContentTranslations_Summary="-"/>
    </Match>
  
    <Match DisplayType="SummaryAdmin">
        <Place Parts_Localization_ContentTranslations_SummaryAdmin="Content:5"/>
        <Place Parts_Localization_DeleteWithTranslations_SummaryAdmin="Actions:100"/>
    </Match>
    
    <Match ContentType="Widget">
      <Match DisplayType="SummaryAdmin">
        <Place Parts_Localization_DeleteWithTranslations_SummaryAdmin="Actions:10@Widgets"/>
        <Place Parts_Localization_ContentTranslations_SummaryAdmin="Content:5@Widgets"/>
      </Match>
    </Match>
  
    <Match ContentType="MenuItem" DisplayType="NavigationAdmin">
      <Place Parts_Localization_ContentTranslations_NavigationAdmin="Content:0"/>
    </Match>
  
    <Place Parts_Localization_CultureSwitcher="Content:1"/>
    <Place Parts_Localization_CultureSwitcher_Edit="Content:1"/>
  
</Placement>