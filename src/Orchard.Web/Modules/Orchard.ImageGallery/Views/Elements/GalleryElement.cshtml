@using System.Web.Mvc.Html
@{ 
    Style.Require("ImageGallery");

    var gallery = (Orchard.ImageGallery.Models.GalleryPart)Model.ImageGallery;
}
Lorem ipsum
@if (Model.IsGalleryAvalable)
{
    <div class="image-gallery">
        <ul>
            @foreach (var image in gallery.Images)
            {
                <li>
                    <a href="@image.PublicUrl" title="@image.Caption">
                        <img src="@Display.ResizeMediaUrl(Width: gallery.ThumbnailWidth, Height: gallery.ThumbnailHeight,
                                                         Mode: "crop", Alignment: "middlecenter", Path: image.PublicUrl)" />
                    </a>            
                </li>
            }                     
        </ul>     
    </div>
}